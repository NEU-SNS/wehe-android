<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_medium">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <ImageView
                android:id="@+id/appImageView"
                android:layout_width="@dimen/app_icon"
                android:layout_height="@dimen/app_icon"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginEnd="@dimen/margin_large"
                android:src="@drawable/dropbox"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/resultNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_toEndOf="@+id/appImageView"
                android:text="@string/Viber"
                android:textSize="@dimen/text_small"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/appStatusTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/resultNameText"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_toEndOf="@+id/appImageView"
                android:text="@string/Viber"
                android:textSize="@dimen/text_small" />

            <TextView
                android:id="@+id/appSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/appStatusTextView"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_toEndOf="@+id/appImageView"
                android:text="@string/Viber"
                android:textSize="@dimen/text_small" />

            <TextView
                android:id="@+id/appTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/appSize"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_toEndOf="@+id/appImageView"
                android:text="@string/Viber"
                android:textSize="@dimen/text_small" />

            <TextView
                android:id="@+id/xputTest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/xputOriginal"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="@dimen/margin_medium"
                android:text="@string/nonapp_throughput"
                android:textSize="@dimen/text_medium" />

            <ImageButton
                android:id="@+id/ib_reverse_engineer_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@android:color/background_light"
                android:contentDescription="@string/info_dpi_rules"
                android:visibility="gone"
                app:srcCompat="@drawable/outline_info_24" />

            <TextView
                android:id="@+id/xputTestValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/xputOriginalValue"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/margin_medium"
                android:text="@string/Viber"
                android:textSize="@dimen/text_medium" />

            <TextView
                android:id="@+id/xputOriginal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/appImageView"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginBottom="@dimen/margin_medium"
                android:text="@string/app_throughput"
                android:textSize="@dimen/text_medium" />

            <TextView
                android:id="@+id/xputOriginalValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/appImageView"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/margin_medium"
                android:text="@string/Viber"
                android:textSize="@dimen/text_medium" />

            <ImageView
                android:id="@+id/arcepLogoImageView"
                android:layout_width="62dp"
                android:layout_height="45dp"
                android:layout_below="@id/xputTestValue"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginEnd="0dp"
                android:layout_toStartOf="@+id/reportToArcep"
                android:visibility="gone"
                app:srcCompat="@drawable/arcep"
                tools:ignore="ContentDescription" />

            <Button
                android:id="@+id/reportToArcep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/xputTestValue"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/margin_medium"
                android:text="@string/alert_arcep"
                android:visibility="gone" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>