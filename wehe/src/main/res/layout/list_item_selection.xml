<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_large">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <ImageView
                android:id="@+id/appImageView"
                android:layout_width="@dimen/app_icon"
                android:layout_height="@dimen/app_icon"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="@dimen/margin_large"
                android:src="@drawable/dropbox"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/app_name_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/appImageView"
                android:text="@string/Viber"
                android:textSize="@dimen/text_medium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/app_time_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/app_name_textview"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_toEndOf="@+id/appImageView"
                android:text="@string/Viber"
                android:textSize="@dimen/text_medium" />

            <TextView
                android:id="@+id/app_size_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/app_time_textview"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_toEndOf="@+id/appImageView"
                android:text="@string/Viber"
                android:textSize="@dimen/text_medium" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/isSelectedSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:clickable="false" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>