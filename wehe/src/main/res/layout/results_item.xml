<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_large">

    <android.support.v7.widget.CardView
        android:id="@+id/result_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <ImageView
                android:id="@+id/appImageView"
                android:layout_width="@dimen/app_icon"
                android:layout_height="@dimen/app_icon"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="@dimen/margin_large"
                android:src="@drawable/dropbox" />

            <TextView
                android:id="@+id/resultNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/appImageView"
                android:text="@string/Viber"
                android:textSize="@dimen/text_medium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/differentiationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/resultNameText"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_toEndOf="@+id/appImageView"
                android:text="@string/Viber"
                android:textSize="@dimen/text_medium" />

            <TextView
                android:id="@+id/dateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/differentiationText"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_toEndOf="@+id/appImageView"
                android:text="@string/Viber"
                android:textSize="@dimen/text_medium" />

            <TextView
                android:id="@+id/appThroughputNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/appImageView"
                android:layout_alignParentStart="true"
                android:text="@string/app_throughput"
                android:textSize="@dimen/text_medium" />

            <TextView
                android:id="@+id/appThroughput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/appImageView"
                android:layout_alignParentEnd="true"
                android:text="@string/Viber"
                android:textSize="@dimen/text_medium" />

            <TextView
                android:id="@+id/nonappThroughputNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/appThroughputNameText"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/margin_medium"
                android:text="@string/nonapp_throughput"
                android:textSize="@dimen/text_medium" />

            <TextView
                android:id="@+id/nonappThroughput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/appThroughput"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/margin_medium"
                android:text="@string/Viber"
                android:textSize="@dimen/text_medium" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>