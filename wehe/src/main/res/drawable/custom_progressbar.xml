<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Define the background properties like color etc -->
    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:angle="270"
                android:centerColor="#717D8C"
                android:centerY="1.0"
                android:endColor="#717D8C"
                android:startColor="#717D8C" />
        </shape>
    </item>

    <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:angle="270"
                    android:centerColor="#41AAC4"
                    android:centerY="1.0"
                    android:endColor="#41AAC4"
                    android:startColor="#41AAC4" />
            </shape>
        </clip>
    </item>

</layer-list>