<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_empty="true">
        <layer-list>
            <item android:bottom="17dp" android:drawable="@drawable/arrow_right" android:left="5dp" android:right="5dp" android:top="17dp"></item>
        </layer-list>
    </item>

    <item android:state_expanded="true">
        <layer-list>
            <item android:bottom="17dp" android:drawable="@drawable/arrow_bottom" android:left="5dp" android:right="5dp" android:top="17dp"></item>
        </layer-list>
    </item>

    <item android:drawable="@drawable/arrow_right"></item>
</selector>