<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="green">#00FF00</color>
    <color name="thumbColor">#66aaaaaa</color>
    <string name="app_name">MaterialDesign</string>
    <declare-styleable name="CustomAttributes">

        <!-- Color of ripple animation -->
        <attr format="color|reference" name="rippleColor"/>
        <!-- Speed of ripple animation -->
        <attr format="float" name="rippleSpeed"/>
        <!-- indicate if the slider must show number indicator -->
        <attr format="boolean" name="showNumberIndicator"/>
        <!-- in progress view indicate max value of progress -->
        <attr format="integer" name="max"/>
        <!-- in progress view indicate min value of progress -->
        <attr format="integer" name="min"/>
        <!-- in progress view indicate value of progress -->
        <attr format="integer" name="value"/>
        <!-- in progress view indicate value of progress -->
        <attr format="integer" name="progress"/>
        <attr format="dimension" name="ringWidth"/>
        <!-- in switche's view indicate state of view -->
        <attr format="boolean" name="check"/>
        <attr format="dimension" name="checkBoxSize"/>
        <attr format="dimension" name="thumbSize"/>
        <!-- in float button indicate icon resource -->
        <attr format="integer" name="iconDrawable"/>
        <!-- in button whitch contains drawable indicate icon resource -->
        <attr format="dimension" name="iconSize"/>
        <!-- in float button indicate if must start with animation -->
        <attr format="boolean" name="animate"/>
        <!-- set the border of the ripple frame -->
        <attr format="float" name="rippleBorderRadius"/>
        <!-- if true, delays calls to OnClickListeners until ripple effect ends -->
        <attr format="boolean" name="clickAfterRipple"/>
    </declare-styleable>
</resources>